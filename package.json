{
  "name": "myanime-tierlist",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "dev:next": "next dev --turbopack",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "lint": "next lint",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop myanime-tierlist",
    "pm2:restart": "pm2 restart myanime-tierlist",
    "pm2:reload": "pm2 reload myanime-tierlist",
    "pm2:delete": "pm2 delete myanime-tierlist",
    "pm2:logs": "pm2 logs myanime-tierlist",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "deploy": "npm run build && npm run pm2:start",
    "redeploy": "npm run build && npm run pm2:reload"
  },
  "dependencies": {
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "eslint": "^9",
    "eslint-config-next": "15.4.6"
  }
}
